#!/usr/bin/env node

/**
 * Module dependencies.
 */
const fs = require("fs");
const app = require("../app");
const debug = require("debug")("wcs:server");
const http = require("http");
const https = require("https");

/**
 * Get port from environment and store in Express.
 */

const port = normalizePort(process.env.PORT || "3000");
app.set("port", port);

/**
 * Create HTTP or HTTPS server.
 */
let server = null;
const SSL_MODE = /^true$/i.test(process.env.SSL_MODE);
if (SSL_MODE) {
  const options = {
    key: fs.readFileSync(`${process.env.SSL_DIR}/wcs.key`),
    cert: fs.readFileSync(`${process.env.SSL_DIR}/wcs.crt`)
  };
  server = https.createServer(options, app);
} else {
  server = http.createServer(app);
}

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on("error", onError);
server.on("listening", onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  let bind = typeof port === "string"
    ? "Pipe " + port
    : "Port " + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case "EACCES":
      console.error(bind + " requires elevated privileges");
      process.exit(1);
      break;
    case "EADDRINUSE":
      console.error(bind + " is already in use");
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === "string"
    ? "pipe " + addr
    : "port " + addr.port;
  debug(`${SSL_MODE ? "HTTPS" : "HTTP"} server is listening on ${bind}`);
}
